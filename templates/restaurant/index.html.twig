{% extends 'base.html.twig' %}

{% block title %}Restaurant index{% endblock %}

{% block body %}
    <h1>Restaurants</h1>
    <a href="{{ path('restaurant_new') }}">Create new</a>

    <div class="row">
        {% for restaurant in restaurants %}
            <div class="card col-lg-3 col-md-4 col-sm-6" style="width: 18rem;">
            <img class="card-img-top" src="{{ restaurant.imageLink }}" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">{{ restaurant.name }}</h5>
                    <a href="{{ path('restaurant_show', {'restaurantId': restaurant.restaurantId}) }}" class="btn btn-primary">See Menus</a>
                    <a href="{{ path('restaurant_edit', {'restaurantId': restaurant.restaurantId}) }}" class="btn btn-primary">Edit</a>
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}
